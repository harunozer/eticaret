@model CountryFormModel
@{
    if (Model.Data == null)
    {
        ViewData["Title"] = "Ülke Ekle";
    }
    else
    {
        ViewData["Title"] = "Ülke Güncelle";
    }
}

<h2>@ViewData["Title"]</h2>


<form method="post">
    <input type="hidden" asp-for="Data.ID" />

    <div class="form-group">
        <label asp-for="Data.CountryName">Ülke Adı</label>
        <input asp-for="Data.CountryName" class="form-control" />
        <span asp-validation-for="Data.CountryName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Data.CancelID">İptal Nedeni</label>
        <select asp-for="Data.CancelID" class="form-control">
            <option value="">Seçiniz</option>
            @foreach (var Item in Model.CancelList)
            {
                <option value="@Item.ID">@Item.CancelName</option>
            }
        </select>
        <span asp-validation-for="Data.CancelID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" text="Kaydet" />
        <a asp-controller="Country" asp-action="Index">İptal</a>
    </div>

</form>