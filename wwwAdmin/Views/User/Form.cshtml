@model UserFormModel
@{
    if (Model.Data == null) {
        ViewData["Title"] = "Kullanıcı Ekle";
    }
    else {
        ViewData["Title"] = "Kullanıcı Güncelle";
    }
}

<h2>@ViewData["Title"]</h2>


<form method="post">
    <input type="hidden" asp-for="Data.ID" />

    <div class="form-group">
        <label asp-for="Data.Name">Ad</label>
        <input asp-for="Data.Name" class="form-control" />
        <span asp-validation-for="Data.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Data.Surname">Soyad</label>
        <input asp-for="Data.Surname" class="form-control" />
        <span asp-validation-for="Data.Surname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Data.EMail">E-Mail</label>
        <input asp-for="Data.EMail" class="form-control" />
        <span asp-validation-for="Data.EMail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Data.Gsm">Gsm</label>
        <input asp-for="Data.Gsm" class="form-control" />
        <span asp-validation-for="Data.Gsm" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Data.Password">Password</label>
        <input asp-for="Data.Password" type="password" value="@(Model.Data != null ? Model.Data.Password : "")" class="form-control" />
        <span asp-validation-for="Data.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Data.UserRoleID">Kullanıcı Rol</label>
        <select asp-for="Data.UserRoleID" class="form-control">
            @foreach (var Item in Model.RoleList)
            {
                <option value="@Item.ID">@Item.RoleName</option>
            }
        </select>
        <span asp-validation-for="Data.UserRoleID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Data.CancelID">İptal Nedeni</label>
        <select asp-for="Data.CancelID" class="form-control">
            <option value="">Seçiniz</option>
            @foreach (var Item in Model.CancelList)
            {
                <option value="@Item.ID">@Item.CancelName</option>
            }
        </select>
        <span asp-validation-for="Data.CancelID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" text="Kaydet" />
        <a asp-controller="User" asp-action="Index">İptal</a>
    </div>

</form>